    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #e9f5ee; /* Verde chiaro di sfondo, come nelle altre pagine */
        padding: 20px;
        color: #0d377f; /* Colore principale del testo */
      }
      h1, h2 {
        color: #28a745; /* Verde brillante, come il pulsante */
        text-align: center;
        font-size: 28px;
        margin-bottom: 20px;
      }
      h1::before {
        content: "üéÆ "; /* Emoji per rendere il titolo pi√π giocoso */
      }
      .menu-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #f8f9fa;
        border: 3px solid #28a745; /* Bordo verde simile agli altri elementi */
        border-radius: 12px;
        padding: 25px;
        max-width: 500px;
        margin: 40px auto;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      }
      .input-container {
        display: flex;
        align-items: center;
        margin: 20px 0;
        width: 100%;
      }
      input {
        flex-grow: 1;
        padding: 12px;
        font-size: 18px; /* Input pi√π grande per seguire lo stile */
        border: 1px solid #ced4da;
        border-radius: 5px;
        margin-right: 10px;
        box-sizing: border-box;
        background-color: #f8f9fa;
      }
      .camera-icon {
        cursor: pointer;
        font-size: 30px; /* Icona pi√π grande e visibile */
        color: #28a745; /* Colore verde per richiamare il tema */
        transition: color 0.3s ease;
      }
      .camera-icon:hover {
        color: #218838; /* Effetto hover per l'icona della fotocamera */
      }
      button {
        padding: 15px 30px;
        margin: 20px 0;
        font-size: 20px;
        cursor: pointer;
        background-color: #28a745; /* Verde brillante per il pulsante */
        color: white;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }
      button:hover {
        background-color: #218838; /* Colore scuro al passaggio */
      }
      #qr-reader {
        margin: 20px auto;
        width: 300px;
        height: 300px;
        display: none; /* Nascondiamo finch√© non serve */
      }
      @media (max-width: 600px) {
        .menu-container {
          padding: 20px;
        }
        h1 {
          font-size: 24px;
        }
        input {
          font-size: 16px;
        }
        button {
          font-size: 18px;
          padding: 12px;
        }
      }
