  script. 
    document.addEventListener('DOMContentLoaded', function() {
      const inviaButton = document.getElementById('invia');
      inviaButton.addEventListener('click', function(event) {
        event.preventDefault();
        const nome = document.getElementById('nome').value;
        const email = document.getElementById('email').value;
        const messaggio = document.getElementById('messaggio').value;
        const richiesta_contatto = {
          nome: nome,
          email: email,
          messaggio: messaggio
        };
        console.log(JSON.stringify(richiesta_contatto))
        // Invia i dati al server tramite una richiesta POST
        fetch('/richiestacontatto', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(richiesta_contatto),
        })
        .then(response => response.json())
        .then(data => {
          // Puoi gestire la risposta qui, come mostrare un messaggio di successo
          document.getElementById('nome').value = " ";
          document.getElementById('email').value = " ";
          document.getElementById('messaggio').value = " ";
        })
        .catch((error) => {
          console.error('Errore:', error);
          alert('Si è verificato un errore durante l\'invio del messaggio.');
        });
      });
    });
