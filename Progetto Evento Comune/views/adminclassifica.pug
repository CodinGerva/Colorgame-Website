doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Classifica Giocatori
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    style.
      body {
        font-family: 'Arial', sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 20px;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
      }
      h1 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
      }
      .search-bar {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
      }
      .search-bar input {
        width: 80%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        word-wrap: break-word;
      }
      th {
        background-color: #4CAF50;
        color: white;
      }
      tr:hover {
        background-color: #f1f1f1;
      }
      .position {
        font-weight: bold;
        font-size: 18px;
        text-align: center;
      }
      .player-name {
        font-weight: bold;
      }
      .highlight {
        color: #FFD700;
      }
      .icon {
        font-size: 20px;
        color: #4CAF50;
        margin-left: 10px;
      }
      .table-responsive {
        overflow-x: auto;
      }
      
      // Media query per schermi piccoli
      @media (max-width: 768px) {
        .search-bar input {
          width: 100%;
        }
        table {
          font-size: 14px;
        }
        th, td {
          padding: 8px;
        }
        h1 {
          font-size: 24px;
        }
      }

    // Corpo della pagina
    body
      .container
        h1 Classifica degli Atleti 🏆
    
        // Barra di ricerca
        div.search-bar
          input(type="text" id="search-bar" placeholder="Cerca atleta...")

        div.table-responsive
          table
            thead
              tr
                th Posizione
                th Nome
                th Cognome
                th Braccialetto
                th Punteggio Classifica
            tbody#player-table
              each player, index in players
                tr
                  td.position= index + 1
                  td.player-name= player.firstName
                  td.player-lastname= player.lastName
                  td.bracelet-id= player.bracelet_id
                  td.classification-points= player.punteggio_classifica
        
      // Funzione di ricerca per filtrare i giocatori
      script.
        const searchBar = document.getElementById('search-bar');
        const tableRows = document.querySelectorAll('#player-table tr');

        searchBar.addEventListener('input', function(event) {
          const query = event.target.value.toLowerCase();
          tableRows.forEach(row => {
            const playerName = row.querySelector('.player-name').textContent.toLowerCase();
            const playerLastName = row.querySelector('.player-lastname').textContent.toLowerCase();
            row.style.display = (playerName.includes(query) || playerLastName.includes(query)) ? '' : 'none';
          });
        });
